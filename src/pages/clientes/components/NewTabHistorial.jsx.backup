// Componente para cada item del historial
const HistoryItem = ({ log, index }) => {
    const icon = getActionIcon(log);
    const theme = getActionTheme(log);
    const label = getActionLabel(log);

    // Formatear timestamp con validaci√≥n robusta
    let timestamp;
    let fullDate;

    try {
        // CORRECCI√ìN: Manejar timestamps de Firestore correctamente
        if (log.timestamp?.toDate && typeof log.timestamp.toDate === 'function') {
            // Timestamp de Firestore con m√©todo toDate()
            timestamp = log.timestamp.toDate();
        } else if (log.timestamp?.seconds !== undefined) {
            // Objeto plano con seconds/nanoseconds (viene de la API)
            timestamp = new Date(log.timestamp.seconds * 1000 + (log.timestamp.nanoseconds || 0) / 1000000);
        } else if (log.timestamp) {
            // Intento gen√©rico de conversi√≥n
            timestamp = new Date(log.timestamp);
        } else {
            console.warn('‚ö†Ô∏è Log sin timestamp:', log.id);
            timestamp = new Date(); // Fallback a fecha actual
        }

        // Validar que el timestamp sea v√°lido
        if (isNaN(timestamp.getTime())) {
            console.warn('‚ö†Ô∏è Timestamp inv√°lido en log:', log.id, log.timestamp);
            timestamp = new Date();
        }

        fullDate = format(timestamp, "d 'de' MMMM, yyyy 'a las' h:mm:ss a", { locale: es });
    } catch (error) {
        console.error('‚ùå Error formateando timestamp:', error, 'Log ID:', log.id, 'Timestamp:', log.timestamp);
        fullDate = 'Fecha no disponible';
        timestamp = new Date();
    }

    return (
        <div
            className={`relative pl-8 pb-8 ${index === 0 ? '' : ''}`}
        >
            {/* L√≠nea vertical de conexi√≥n */}
            {index > 0 && (
                <div className="absolute left-4 top-0 w-0.5 h-8 bg-gray-200 dark:bg-gray-700 -translate-y-8"></div>
            )}

            {/* Icono circular */}
            <div className={`absolute left-0 flex items-center justify-center w-8 h-8 rounded-full ${theme.icon} ring-4 ring-white dark:ring-gray-900`}>
                {icon}
            </div>

            {/* Contenido del item */}
            <div className={`ml-4 p-4 rounded-lg border ${theme.bg} ${theme.border} shadow-sm`}>
                {/* Header con etiqueta */}
                <div className="flex items-center justify-between flex-wrap gap-2 mb-3">
                    <span className={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${theme.badge}`}>
                        {label}
                    </span>
                </div>

                {/* Mensaje principal */}
                <div className="text-sm font-normal mb-3">
                    <SmartMessage log={log} />
                </div>

                {/* Footer con detalles de tiempo y usuario - contextualizado */}
                <div className={`flex flex-wrap items-center gap-x-4 gap-y-2 text-xs ${theme.text} pt-2 border-t border-gray-200 dark:border-gray-700`}>
                    <div className="flex items-center gap-1.5">
                        <Icons.Users className="w-3.5 h-3.5" />
                        <span className="text-gray-500 dark:text-gray-400">Acci√≥n Realizada por:</span>
                        <span className="font-medium text-gray-700 dark:text-gray-300">
                            {log.user?.nombre || log.user?.name || log.userName || 'Usuario'}
                        </span>
                    </div>
                    <div className="flex items-center gap-1.5">
                        <Icons.Calendar className="w-3.5 h-3.5" />
                        <span className="text-gray-500 dark:text-gray-400">Fecha y hora de la acci√≥n:</span>
                        <span className="font-medium text-gray-700 dark:text-gray-300">{fullDate}</span>
                    </div>
                </div>
            </div>
        </div>
    );
};

// Hook personalizado para manejar el historial
const useClientHistory = (clienteId) => {
    const [logs, setLogs] = useState([]);
    const [loading, setLoading] = useState(false);
    const [error, setError] = useState(null);

    const fetchHistory = useCallback(async () => {
        if (!clienteId) return;

        try {
            setLoading(true);
            setError(null);

            const auditLogs = await getAuditLogsForCliente(clienteId);

            // Filtrar logs irrelevantes
            // Soporta tanto estructura nueva (actionType) como antigua (details.action)
            const filtered = auditLogs.filter(log => {
                // Estructura nueva: Filtrar por actionType si existe
                if (log.actionType) {
                    return log.actionType !== 'EDIT_NOTE';
                }
                // Estructura antigua: Filtrar por details.action
                return log.details && log.details.action !== 'EDIT_NOTE';
            });

            // DEBUG: Ver timestamps reales
            console.log('üîç TIMESTAMPS DE LOGS RECIBIDOS:');
            filtered.forEach((log, i) => {
                try {
                    let ts;
                    if (log.timestamp?.toDate && typeof log.timestamp.toDate === 'function') {
                        ts = log.timestamp.toDate();
                    } else if (log.timestamp?.seconds !== undefined) {
                        ts = new Date(log.timestamp.seconds * 1000 + (log.timestamp.nanoseconds || 0) / 1000000);
                    } else {
                        ts = new Date(log.timestamp);
                    }

                    if (isNaN(ts.getTime())) {
                        console.log(`${i + 1}. ${log.actionType} - ‚ö†Ô∏è TIMESTAMP INV√ÅLIDO - ID: ${log.id}`, log.timestamp);
                    } else {
                        console.log(`${i + 1}. ${log.actionType} - ${ts.toISOString()} - ID: ${log.id}`);
                    }
                } catch (error) {
                    console.log(`${i + 1}. ${log.actionType} - ‚ùå ERROR AL PARSEAR TIMESTAMP - ID: ${log.id}`, error, log.timestamp);
                }
            });

            // Ordenar por timestamp descendente (m√°s reciente primero)
            // Manejar timestamps de Firestore correctamente
            const sorted = filtered.sort((a, b) => {
                let timestampA, timestampB;

                try {
                    if (a.timestamp?.toDate && typeof a.timestamp.toDate === 'function') {
                        timestampA = a.timestamp.toDate();
                    } else if (a.timestamp?.seconds !== undefined) {
                        timestampA = new Date(a.timestamp.seconds * 1000 + (a.timestamp.nanoseconds || 0) / 1000000);
                    } else {
                        timestampA = new Date(a.timestamp);
                    }
                    if (isNaN(timestampA.getTime())) {
                        timestampA = new Date(0);
                    }
                } catch {
                    timestampA = new Date(0);
                }

                try {
                    if (b.timestamp?.toDate && typeof b.timestamp.toDate === 'function') {
                        timestampB = b.timestamp.toDate();
                    } else if (b.timestamp?.seconds !== undefined) {
                        timestampB = new Date(b.timestamp.seconds * 1000 + (b.timestamp.nanoseconds || 0) / 1000000);
                    } else {
                        timestampB = new Date(b.timestamp);
                    }
                    if (isNaN(timestampB.getTime())) {
                        timestampB = new Date(0);
                    }
                } catch {
                    timestampB = new Date(0);
                }

                return timestampB - timestampA;
            });

            setLogs(sorted);
        } catch (err) {
            console.error('‚ùå Error cargando historial:', err);
            setError('Error al cargar el historial del cliente');
        } finally {
            setLoading(false);
        }
    }, [clienteId]);

    useEffect(() => {
        fetchHistory();
    }, [fetchHistory]);

    return { logs, loading, error, refetch: fetchHistory };
};

